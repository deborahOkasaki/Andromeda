<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="andromeda" transaction-type="JTA">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<jta-data-source>java:/andromedaDS</jta-data-source>
		
		<class>br.com.fiap.andromeda.entity.Usuario</class>
		<!-- 
		<class>br.com.fiap.andromeda.entity.Residencia</class>
		<class>br.com.fiap.andromeda.entity.UsuarioResidencia</class>
		<class>br.com.fiap.andromeda.entity.Comodo</class>
		<class>br.com.fiap.andromeda.entity.ItemEletronico</class>
		<class>br.com.fiap.andromeda.entity.ComodoItemEletronico</class>
		<class>br.com.fiap.andromeda.entity.Categoria</class> -->
		
		<class>br.com.fiap.andromeda.servlet.LoginServlet</class>
		<class>br.com.fiap.andromeda.servlet.SessionServlet</class>
		
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
		
		<properties>

			<property name="hibernate.dialect" value="org.hibernate.dialect.Oracle12cDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="create" />
		
		</properties>	
		
	</persistence-unit>
</persistence>